<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Portfolio</title>

    <!-- Boostrap ve ikonlar -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />

    <!-- Optimize edilmiş site.css -->
    <link rel="stylesheet" href="~/css/site.css?v=1.2.5" />
</head>
<body class="d-flex flex-column">
    <nav class="navbar navbar-expand-lg navbar-dark custom-navbar shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/">
                <i class="fas fa-laptop-code me-2"></i> Yigitfolio
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav align-items-center">
                    <li class="nav-item">
                        <a class="nav-link active" href="/">Ana Sayfa</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/#projects">Projeler</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/#contact">İletişim</a>
                    </li>
                    <li class="nav-item ms-2">
                        <a href="https://www.linkedin.com/in/yigitsener7" target="_blank" class="nav-link">
                            <i class="fab fa-linkedin"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="https://github.com/yigitsener77" target="_blank" class="nav-link">
                            <i class="fab fa-github"></i>
                        </a>
                    </li>

                    <li class="nav-item ms-3">
                        <button id="theme-toggle" class="btn btn-sm btn-outline-light">
                            🌙 Dark Mode
                        </button>
                    </li>
                </ul>
            </div>
        </div>
    </nav>


    <div class="container" style="padding-top: 80px;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="footer-content">
            <span class="footer-center">
                © 2025 Yigitfolio | YigitSener
            </span>

        </div>
    </footer>
    <script>
        const toggleButton = document.getElementById('theme-toggle');
        toggleButton.addEventListener('click', () => {
            document.body.classList.toggle('light-mode');
            if(document.body.classList.contains('light-mode')){
                toggleButton.innerHTML = '🌙 Dark Mode';
            } else {
                toggleButton.innerHTML = '☀️ Light Mode';
            }
        });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
