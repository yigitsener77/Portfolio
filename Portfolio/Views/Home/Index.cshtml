@model Portfolio.Models.ProfileViewModel

<div class="profile-section">
    <img src="@Model.ProfileImage" alt="Profil Resmi" class="profile-image" />
    <h1 class="profile-name">@Model.FullName</h1>
    <p class="profile-about">@Model.About</p>
    <div class="social-icons mt-3">
        <a href="@Model.Linkedin" target="_blank" class="social-icon-link">
            <i class="fab fa-linkedin fa-2x"></i>
        </a>
        <a href="@Model.Github" target="_blank" class="social-icon-link">
            <i class="fab fa-github fa-2x"></i>
        </a>
    </div>
</div>

<div class="section-padding" id="projects">
    <div class="section-padding">
        <div class="card card-enhanced shadow-sm p-4 mb-5">
            <div class="card-body">
                <h2 class="section-title card-section-title d-flex align-items-center mb-4">
                    <i class="fas fa-folder-open me-2"></i> Projelerim
                </h2>
                <div class="projects-grid d-flex flex-wrap justify-content-start gap-4">
                    @foreach (var project in Model.Projects)
                    {
                        <div class="project-card card h-100 shadow-sm" style="width: 300px;">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">@project.Title</h5>
                                <p class="card-text flex-grow-1">@project.Description</p>
                                <a href="@project.Link" class="btn btn-primary mt-auto">Projeyi Görüntüle</a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<div class="section-padding" id="contact">
    <div class="section-padding">
        <div class="card card-enhanced shadow-sm p-4 mb-5">
            <div class="card-body">
                <h2 class="section-title card-section-title d-flex align-items-center mb-4">
                    <i class="fa-solid fa-paper-plane me-2"></i> Benimle İletişime Geçin
                </h2>
                <form asp-action="SendMessage" method="post">
                    <div class="form-group mb-3">
                        <label for="Name"><i class="fas fa-user me-1"></i> Adınız</label>
                        <input type="text" class="form-control" id="Name" name="Name" required />
                    </div>
                    <div class="form-group mb-3">
                        <label for="Email"><i class="fas fa-envelope me-1"></i> E-Posta</label>
                        <input type="email" class="form-control" id="Email" name="Email" required />
                    </div>
                    <div class="form-group mb-3">
                        <label for="Content"><i class="fas fa-comment-dots me-1"></i> Mesajınız</label>
                        <textarea class="form-control" id="Content" name="Content" rows="4" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">
                        <i class="fa-solid fa-paper-plane"></i> Gönder
                    </button>
                    @if (TempData["MessageResult"] != null)
                    {
                        <div class="text-danger mt-2">@TempData["MessageResult"]</div>
                    }
                </form>
            </div>
        </div>
    </div>
</div>
